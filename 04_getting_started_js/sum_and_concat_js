
const sum = function(a, b) {
  if (typeof (a) === 'number' && typeof (b) === 'number') return a + b;
  throw new TypeError('Something is wrong with the types.');
};

sum(1, 2);

const concat = function(a, b) {
  if (typeof (a) === 'string' && typeof (b) === 'string') return a + b;
  throw new TypeError('Something is wrong with the types.');
};

concat(1, 'b');
